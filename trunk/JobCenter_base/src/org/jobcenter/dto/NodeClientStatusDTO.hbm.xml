<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.jobcenter.dto.NodeClientStatusDTO" table="node_client_status" >
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>


        <!-- Using version number optimistic locking -->
  		<version name="dbRecordVersionNumber" column="db_record_version_number" type="java.lang.Integer" />


        <property name="nodeId" type="java.lang.Integer">
            <column name="node_id" not-null="true" />
        </property>


        <many-to-one name="node" class="org.jobcenter.dto.Node" fetch="select"  insert="false" update="false">
            <column name="node_id" not-null="true" />
        </many-to-one>

        <property name="clientStarted" type="java.lang.Boolean">
            <column name="client_started" not-null="true" />
        </property>


        <property name="lastCheckinTime" type="java.sql.Timestamp">
            <column name="last_checkin_time" length="19" not-null="true" />
        </property>

        <property name="nextCheckinTime" type="java.sql.Timestamp">
            <column name="next_checkin_time" length="19" not-null="false" />
        </property>

        <property name="lateForNextCheckinTime" type="java.sql.Timestamp">
            <column name="late_for_next_checkin_time" length="19" not-null="false" />
        </property>


        <property name="secondsUntilNextCheckin" type="java.lang.Integer">
            <column name="seconds_until_next_checkin" not-null="false" />
        </property>


        <property name="notificationSentThatClientLate" type="java.lang.Boolean">
            <column name="notification_sent_that_client_late" not-null="true" />
        </property>


    </class>
</hibernate-mapping>
