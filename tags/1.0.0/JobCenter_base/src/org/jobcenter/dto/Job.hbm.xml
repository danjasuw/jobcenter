<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.jobcenter.dto.Job" table="job" >
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>


        <!-- Using version number optimistic locking -->
  		<version name="dbRecordVersionNumber" column="db_record_version_number" type="java.lang.Integer" />


        <many-to-one name="jobType" class="org.jobcenter.dto.JobType" fetch="select">
            <column name="job_type_id" not-null="true" />
        </many-to-one>
        
        
        <property name="statusId" type="java.lang.Integer">
            <column name="status_id" not-null="true" />
        </property>
        
        <many-to-one name="status" class="org.jobcenter.dto.StatusDTO" fetch="select"  update="false" insert="false">
            <column name="status_id" not-null="true" />
        </many-to-one>


        <property name="requestId" type="java.lang.Integer">
            <column name="request_id" not-null="true" />
        </property>


        <property name="submitDate" type="java.sql.Timestamp">
            <column name="submit_date" length="19" not-null="true" />
        </property>

        <property name="submitter" type="java.lang.String">
            <column name="submitter" length="200" />
        </property>
        <property name="priority" type="java.lang.Integer">
            <column name="priority" not-null="true" />
        </property>

    </class>
</hibernate-mapping>
